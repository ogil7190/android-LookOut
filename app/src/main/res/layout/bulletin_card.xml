<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:id="@+id/container"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Session Date Sheet!"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:breakStrategy="simple"
            android:id="@+id/description"
            android:ellipsize="end"
            android:textSize="16dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:layout_below="@+id/title"
            android:text="Check out the latest date sheet for this session.We have cool style for date sheets go and check out the new framework only for you guys"
            android:maxLines="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:background="@color/black"
            android:alpha="0.35"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/description"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:text="OGIL"
                android:padding="5dp"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/files"
                android:src="@drawable/ic_attachment_black_24dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:padding="2dp"
                android:background="@drawable/back_notification"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/notification"
                android:maxLength="2"
                android:text="●"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>