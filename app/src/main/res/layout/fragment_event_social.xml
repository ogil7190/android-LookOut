<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/overview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/selector"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/social_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/cement_black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/social_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Invite people to the event, click to share"
                android:textAlignment="center"
                android:textColor="@color/cement_black"
                android:textSize="18dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/share"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@color/transparent"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/whatsapp"
                    android:tint="@color/material_dark_green" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/social_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textStyle="italic|bold"
                android:padding="10dp"
                android:background="@color/light_grey"
                android:text="The best thing about crowd is that it make events amazing!"
                android:textAlignment="center"
                android:textColor="@color/cement_black"
                android:textSize="18dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>